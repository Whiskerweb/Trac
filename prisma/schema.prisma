// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
  STARTUP
  AFFILIATE
}

model User {
  id            String   @id @default(uuid())
  email         String   @unique
  password_hash String
  name          String
  role          UserRole
  created_at    DateTime @default(now())
  
  // Relations
  owned_projects Project[] @relation("ProjectOwner")
  claimed_links  Link[]    @relation("LinkClaimer")
  
  @@index([email])
}

model Link {
  id              String   @id @unique  // NanoID - manually generated
  destination_url String
  project_id      String
  user_id         String   // Claimer (Affiliate)
  name            String?
  created_at      DateTime @default(now())
  
  // Relations
  project         Project  @relation(fields: [project_id], references: [id], onDelete: Cascade)
  claimer         User     @relation("LinkClaimer", fields: [user_id], references: [id])
  
  @@index([project_id])
  @@index([user_id])
}

model Project {
  id         String   @id @default(uuid())
  name       String
  public_key String   @unique
  created_at DateTime @default(now())
  website    String?
  user_id    String   // Owner (Startup)
  
  // Relations
  owner      User     @relation("ProjectOwner", fields: [user_id], references: [id])
  links      Link[]
  
  @@index([public_key])
  @@index([user_id])
}

// =============================================
// URL SHORTENER - Simple link shortener model
// =============================================
model ShortLink {
  id            String   @id @default(uuid())
  slug          String   @unique  // e.g. "abc123"
  original_url  String
  workspace_id  String   // Owner's Supabase user ID
  clicks        Int      @default(0)
  created_at    DateTime @default(now())
  
  // Relations
  enrollment    MissionEnrollment?  // Link may be associated with an affiliate enrollment
  
  @@index([slug])
  @@index([workspace_id])
}

// =============================================
// API KEYS - For workspace authentication
// =============================================
model ApiKey {
  id            String   @id @default(uuid())
  workspace_id  String   @unique  // Supabase user ID (one key per user)
  public_key    String   @unique  // Format: pk_trac_<nanoid>
  created_at    DateTime @default(now())
  last_used_at  DateTime?
  
  @@index([public_key])
  @@index([workspace_id])
}

// =============================================
// WEBHOOK ENDPOINTS - Multi-tenant Stripe webhooks
// =============================================
model WebhookEndpoint {
  id            String   @id  // Format: whk_<nanoid> - no @default, generated in code
  workspace_id  String   @unique  // One endpoint per workspace
  description   String?  // e.g. "Stripe Production"
  secret        String?  // whsec_... from Stripe (encrypted in prod)
  created_at    DateTime @default(now())
  updated_at    DateTime @updatedAt
  
  @@index([workspace_id])
}

// =============================================
// AFFILIATE PLATFORM - Missions & Enrollments
// =============================================

enum MissionStatus {
  DRAFT
  ACTIVE
  ARCHIVED
}

enum EnrollmentStatus {
  PENDING
  APPROVED
  REJECTED
}

// Mission = Affiliate Offer (created by Startup)
model Mission {
  id           String        @id @default(uuid())
  workspace_id String        // Supabase user ID of the Startup
  title        String        // e.g. "Campagne Été 2025"
  description  String        @db.Text
  target_url   String        // Final product URL
  reward       String        // e.g. "10%" or "5€ par vente"
  status       MissionStatus @default(DRAFT)
  created_at   DateTime      @default(now())
  updated_at   DateTime      @updatedAt
  
  // Relations
  enrollments  MissionEnrollment[]
  
  @@index([workspace_id])
  @@index([status])
}

// MissionEnrollment = Affiliate participation (Student joins Mission)
model MissionEnrollment {
  id           String           @id @default(uuid())
  mission_id   String
  user_id      String           // Supabase user ID of the Affiliate (Student)
  status       EnrollmentStatus @default(PENDING)
  link_id      String?          @unique // Reference to the unique ShortLink created for this affiliate
  created_at   DateTime         @default(now())
  updated_at   DateTime         @updatedAt
  
  // Relations
  mission      Mission          @relation(fields: [mission_id], references: [id], onDelete: Cascade)
  link         ShortLink?       @relation(fields: [link_id], references: [id])
  
  // Constraints: One enrollment per user per mission
  @@unique([mission_id, user_id])
  @@index([user_id])
  @@index([mission_id])
}
